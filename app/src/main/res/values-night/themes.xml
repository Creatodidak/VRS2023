<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#082757</item>
        <item name="android:editTextBackground">@drawable/tvbordernight</item>
        <item name="android:fontFamily">@font/free</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeOverlay.VRSPOLRESLANDAK.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat">      //no actionbar, but status bar exists
        <item name="android:windowFullscreen">false</item>                       //remove status bar
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>        //smooth animation
        <item name="colorAccent">@color/white</item>                      //change button text color
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>