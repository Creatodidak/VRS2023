<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#082757</item>
        <item name="android:editTextBackground">@drawable/tvborder</item>
        <item name="android:fontFamily">@font/free</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Base.Theme.MyApplication.Fullscreen" parent="Base.Theme.MyApplication">
        <item name="android:actionBarStyle">
            @style/Widget.Base.Theme.MyApplication.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.VRSPOLRESLANDAK.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat">      //no actionbar, but status bar exists
        <item name="android:windowFullscreen">false</item>                       //remove status bar
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>        //smooth animation
        <item name="colorAccent">@color/white</item>                      //change button text color
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>